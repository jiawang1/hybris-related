<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

	<collectiontypes>
		<collectiontype code="GenderList" elementtype="Gender" autocreate="true" generate="true" type="list"/>
		<collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum" autocreate="true" generate="true"
		                type="set"/>
	</collectiontypes>
	
	<enumtypes>
		<enumtype generate="true" code="SwatchColorEnum" autocreate="true" dynamic="true">
			<value code="BLACK"/>
			<value code="BLUE"/>
			<value code="BROWN"/>
			<value code="GREEN"/>
			<value code="GREY"/>
			<value code="ORANGE"/>
			<value code="PINK"/>
			<value code="PURPLE"/>
			<value code="RED"/>
			<value code="SILVER"/>
			<value code="WHITE"/>
			<value code="YELLOW"/>
		</enumtype>
	</enumtypes>

	<relations>
		<relation code="enterpriseUser2Contact" generate="true" autocreate="true" localized="false">
			<sourceElement qualifier="enterpriseUserUser" type="EnterpriseUser" cardinality="one" />
			<targetElement qualifier="contacts" type="Contact" cardinality="many" collectiontype="set"/>
		</relation>
		
		<relation code="enterpriseUser2Media" generate="true" autocreate="true" localized="false">
			<sourceElement qualifier="enterpriseUser" type="EnterpriseUser" cardinality="one" />
			<targetElement qualifier="medias" type="Media" cardinality="many" collectiontype="set"/>
		</relation>
	
		<relation code="cat2alias" autocreate="true" generate="true" localized="false" >
			<sourceElement qualifier="alias" type="CategoryAlias" cardinality="many" collectiontype="list">
				<modifiers write="true" partof="true" />
			</sourceElement>
			<targetElement qualifier="category" type="Category" cardinality="one"></targetElement>
		</relation>
		
	</relations>
	
	<itemtypes>

		<!-- Add your item definitions here -->


		<!-- TypeGroups are for structure of this file only -->

		<typegroup name="Apparel">
			<itemtype code="ApparelProduct" extends="Product"
			          autocreate="true" generate="true"
			          jaloclass="com.tasly.anguo.core.jalo.ApparelProduct">
				<description>Base apparel product extension that contains additional attributes.</description>
				<attributes>
					<attribute qualifier="genders" type="GenderList">
						<description>List of genders that the ApparelProduct is designed for</description>
						<modifiers/>
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
			          autocreate="true" generate="true"
			          jaloclass="com.tasly.anguo.core.jalo.ApparelStyleVariantProduct">
				<description>Apparel style variant type that contains additional attribute describing variant style.
				</description>
				<attributes>
					<attribute qualifier="style" type="localized:java.lang.String"
					           metatype="VariantAttributeDescriptor">
						<description>Color/Pattern of the product.</description>
						<modifiers/>
						<persistence type="property"/>
					</attribute>

					<attribute qualifier="swatchColors" type="SwatchColorSet">
						<description>A normalized color mapping to a standardized front-end navigable name.
						</description>
						<modifiers/>
						<persistence type="property"/>
					</attribute>
				</attributes>

			</itemtype>

			<itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
			          autocreate="true" generate="true"
			          jaloclass="com.tasly.anguo.core.jalo.ApparelSizeVariantProduct">
				<description>Apparel size variant type that contains additional attribute describing variant size.
				</description>
				<attributes>
					<attribute qualifier="size" type="localized:java.lang.String"
					           metatype="VariantAttributeDescriptor">
						<description>Size of the product.</description>
						<modifiers/>
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>
		
		<typegroup name="Electronics">
			<itemtype code="ElectronicsColorVariantProduct" extends="VariantProduct"
          autocreate="true" generate="true"
          jaloclass="com.tasly.anguo.core.jalo.ElectronicsColorVariantProduct">
				 <description>Electronics color variant type that contains additional attribute describing variant color.
				</description>
				<attributes>
					<attribute qualifier="color" type="localized:java.lang.String"
					           metatype="VariantAttributeDescriptor">
						<description>Color of the product.</description>
						<modifiers/>
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
			<itemtype code="Customer" autocreate="false" generate="false">
				<description>Extending Customer type with additional attributes.</description>
				<attributes>
					<attribute qualifier="companyName" type="java.lang.String">
						<description>Company name of customer.</description>
						<modifiers/>
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
			<itemtype code="PersonalUser" extends="Customer">
				<attributes>
					<attribute qualifier="gender" type="Gender">
						<modifiers read="true" write="true" search="true"
							optional="true" />
						<persistence type="property" />
						<description>It holds information about customer gender (i.e. Male, Female, Unknown.)</description>
					</attribute>
					<attribute qualifier="position" type="java.lang.String">
						<description>The position of customer in company.</description>
						<modifiers/>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="idCard" type="java.lang.String">
						<description>ID Card.</description>
						<modifiers encrypted="true"/>
						<persistence type="property" />
					</attribute>
					<attribute qualifier="idName" type="java.lang.String">
						<description>ID Name.</description>
						<modifiers/>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="identified" type="java.lang.Boolean">
						<description>Whether pass the identification.</description>
						<modifiers/>
						<persistence type="property"/>
					</attribute>										
				</attributes>
			</itemtype>
			
			<itemtype code="EnterpriseUser" extends="Customer">
				<description>EnterpriseUser extend from customer used for Enterprise .</description>
				<attributes>
					<attribute qualifier="registeredNo" type="java.lang.Integer">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="status" type="java.lang.String">
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
			
			<itemtype code="DebitPaymentInfo" autocreate="false" generate="false">
				<attributes>
					<attribute qualifier="isValid" type="java.lang.Boolean">
						<modifiers read="true" write="true" search="true"
							optional="true" />
						<persistence type="property" />
					</attribute>
					<attribute qualifier="legalRepr" type="java.lang.String">
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
			
			<itemtype code="Contact">
				<deployment table="Contact" typecode="30000" />
				<attributes>
					<attribute qualifier="name" type="java.lang.String">
						<modifiers read="true" write="true" search="true"
							optional="false" unique="true" />
						<persistence type="property">
							 <columntype database="oracle">
								<value>varchar(30)</value>
							</columntype>
							<columntype database="sap">
								<value>varchar(30)</value>
							</columntype>
							<columntype database="mysql">
								<value>varchar(30)</value>
							</columntype>
							<columntype>
								<value>HYBRIS.LONG_STRING</value>
							</columntype>
						</persistence>
					</attribute>
					<attribute qualifier="posistion" type="java.lang.String">
						<persistence type="property" >
							 <columntype database="oracle">
								<value>varchar(100)</value>
							</columntype>
							<columntype database="sap">
								<value>varchar(100)</value>
							</columntype>
							<columntype database="mysql">
								<value>varchar(100)</value>
							</columntype>
							<columntype>
								<value>HYBRIS.LONG_STRING</value>
							</columntype>
						</persistence>
						<modifiers read="true" write="true" search="true"
							optional="false" unique="true" />
					</attribute>
					<attribute qualifier="contactInfo" type="java.lang.String">
						<persistence type="property" />
						<modifiers read="true" write="true" search="true"
							optional="true" />
					</attribute>
				</attributes>
			</itemtype>
			
		</typegroup>

		<typegroup name="AnguoProduct">
			<itemtype code="CategoryAlias" generate="true" autocreate="true">
				<deployment table="CategoryAlias" typecode="10000"/>
				<attributes>
					<attribute type="localized:java.lang.String" autocreate="true" generate="true" qualifier="alias">
						<persistence type="property"></persistence>
						<description>category alias name</description>
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>

	</itemtypes>
</items>
